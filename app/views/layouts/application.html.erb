<!DOCTYPE html>
<html>
<head>
  <title>Pomodoro Assistant</title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-cookie' %>
  <%= javascript_include_tag('pomodoro/init_timezone.js') %>

  <link rel="stylesheet/less" href="/stylesheets/pomodoro-kitchen.less" type="text/css">

  <%= csrf_meta_tag %>
  <%= yield :head %>
  <%= javascript_include_tag "less-1.0.36.min.js" %>
</head>
<body>

<% [:info, :error].each do |key| %>
   <% if flash[key] %>
   <div class="<%= key %>" id="flash">
     <%= flash[key] %>
   </div>
   <% end %>
 <% end %>

<div id="content-box">
  <div id="header">
    <div id="logo">
        <div id="title">
          Pomodoro Assitant
        </div>
        <div id="caption">
          Organize your time 25 minutes at a time
        </div>
    </div>
    <% if signed_in? %>
        <div id="menu">
          Welcome <%= current_user.name %>
          <br/><%= link_to "Logout", '/logout' %>
        </div>
    <% end %>

  </div>
  <%= yield %>
</div>


</body>
</html>
